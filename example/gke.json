{
  "apiVersion": "enterprises.upmc.com/v1",
  "kind": "ElasticsearchCluster",
  "metadata": {
    "name": "es-cluster"
  },
  "spec": {
    "cluster-name": "primary",
    "zones": ["us-central1-a", "us-central1-f"],
    "node-specs":{
        "master":{
            "replicas": 3
        },
        "client": {
            "replicas": 1
        },
        "data": {
            "replicas": 3,
            "cpu-req": "8000m",
            "mem-req": "30Gi",
            "heap-max": 28000,
            "heap-min": 28000
        },
        "ingest": {}
    },
    "data-volume-size": "10Gi",
    "storage": {
      "type": "pd-ssd",
      "storage-class-provisioner": "kubernetes.io/gce-pd"
    }
  }
}
